{
  "vim_mode": true,
  "icon_theme": "Colored Zed Icons Theme Dark",
  "theme": "One Dark Pro Flat",
  "ui_font_size": 17,
  "ui_font_family": "JetBrainsMonoNL Nerd Font",
  "buffer_font_size": 17,
  "buffer_font_family": "JetBrainsMonoNL Nerd Font",
  "agent": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    }
  },
  "inline_code_actions": false,
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false,
    "selections_menu": false
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "search": {
    "button": false
  },
  "file_finder": {
    "include_ignored": true
  },
  "hide_mouse": "on_typing_and_movement",
  "inlay_hints": {
    "enabled": false
  },
  "show_edit_predictions": false,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "tab_bar": {
    "show": true
  },
  "scrollbar": {
    "show": "never"
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware",
    "background_coloring": "disabled"
  },
  "preview_tabs": {
    "enabled": false
  },
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true
    }
  },
  "languages": {
    "Haskell": {
      "tab_size": 2
    }
  },
  "cursor_blink": false,
  "relative_line_numbers": true,
  "tabs": {
    "file_icons": true,
    "git_status": true
  }
}
